# This file is written in the [RDF 1.1 Turtle] language.  
# It contains all the RDF triples implied by [Basic Concepts].

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix types: <https://terms.fhiso.org/types/> .

# These triples are all true, either axiomatically or by entailment,
# according to [RDF 1.1 Semantics].

rdf:type
	rdf:type rdf:Property ;
	rdfs:range rdf:Class .

rdfs:Class
	rdf:type rdfs:Class ;
	rdfs:subClassOf rdfs:Resource ;
	types:requiredProperty
		rdf:type, rdfs:subClassOf, types:requiredProperty .

rdfs:subClassOf
	rdf:type rdf:Property ;
	rdfs:range rdf:Class .

rdfs:Resource
	rdf:type rdf:Class ;
	rdfs:subClassOf rdfs:Resource ;
	types:requiredProperty rdf:type .

rdf:Property
	rdf:type rdfs:Class ;
	rdfs:subClassOf rdfs:Resource ;
	types:requiredProperty rdf:type, rdfs:range .

rdfs:range
	rdf:type rdf:Property ;
	rdfs:range rdfs:Class .

types:requiredProperty
	rdf:type rdf:Property ;
	rdfs:range rdf:Property ;
	rdfs:isDefinedBy
		<https://fhiso.org/TR/basic-concepts#required-props> .

rdfs:Datatype
	rdf:type rdfs:Class ;
	rdfs:subClassOf rdfs:Class ;
	types:requiredProperty rdf:type, rdfs:subClassOf, 
                types:pattern, types:isAbstract .

types:pattern
	rdf:type rdf:Property ;
	rdf:range types:Pattern ;
	rdfs:isDefinedBy
		<https://fhiso.org/TR/basic-concepts#patterns> .

# TODO: this will be defined externally
types:Pattern
	rdf:type rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	types:pattern ".*" ;
	types:isAbstract false ;
	rdfs:isDefinedBy
		<https://fhiso.org/TR/basic-concepts#patterns> .

rdfs:Literal
	rdf:type rdfs:Class ;
	rdfs:subClassOf rdfs:Resource ;
	types:requiredProperty rdf:type .

types:isAbstract
	rdf:type rdf:Property ;
	rdf:range xsd:boolean ;
	rdfs:isDefinedBy
		<https://fhiso.org/TR/basic-concepts#abstract-types> .

xsd:string
	rdf:type rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	types:pattern ".*" ;
	types:isAbstract false .

xsd:boolean
	rdf:type rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	types:pattern "true|false|1|0" ;
	types:isAbstract false .

xsd:integer
	rdf:type rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	types:pattern "[+-]?[0-9]+" ;
	types:isAbstract false .

rdf:langString
	rdf:type rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	types:pattern ".*" ;
	types:isAbstract false .


